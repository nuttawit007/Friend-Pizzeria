  style="background-image: url('/img/hero/bg/hero-bg.svg')"
>
  <img class="absolute bottom-0" src="/img/hero/iconic/pizza.svg" alt="iconic" />
  <img class="absolute bottom-0" src="/img/hero/iconic/ingredient.svg" alt="ingredient" />
  <button
    class="absolute bottom-40 inline-flex items-center justify-center z-[2] py-5 px-8 gap-2 rounded-full bg-_red-500 text-white text-2xl"
  >
    สร้างเมนูของคุณเอง
    <i data-lucide="move-right" class="w-[30px] h-[30px]"></i>
  </button>
</section>

<!-- Carousel -->
<section>
  <div class="mx-auto relative overflow-hidden">
    <div class="glide">
      <div class="glide__track relative" data-glide-el="track">
        <ul class="glide__slides">
          <li class="glide__slide text-white flex items-center justify-center">
            <img src="/img/banner/promotion/1.png" alt="promotion-1" />
          </li>
          <li class="glide__slide text-white flex items-center justify-center">
            <img src="/img/banner/promotion/2.png" alt="promotion-2" />
          </li>
          <li class="glide__slide text-white flex items-center justify-center">
            <img src="/img/banner/promotion/3.png" alt="promotion-3" />
          </li>
        </ul>

        <div
          class="glide__bullets absolute bottom-4 left-1/2 transform -translate-x-1/2 flex space-x-2 z-10 pointer-events-auto"
          data-glide-el="controls[nav]"
        >
          <button class="glide__bullet" data-glide-dir="=0"></button>
          <button class="glide__bullet" data-glide-dir="=1"></button>
          <button class="glide__bullet" data-glide-dir="=2"></button>
        </div>
      </div>

      <div
        class="glide__arrows absolute inset-0 flex items-center justify-between"
        data-glide-el="controls"
      >
        <button
          class="glide__arrow glide__arrow--left bg-white/30 h-full text-white p-3"
          data-glide-dir="<"
        >
          ◀
        </button>
        <button
          class="glide__arrow glide__arrow--right bg-white/30 h-full text-white p-3"
          data-glide-dir=">"
        >
          ▶
        </button>
      </div>
    </div>
  </div>
</section>

