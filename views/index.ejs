                  <button @click="modalOpen = true" class="bg-_red-500 text-white px-4 py-2 rounded-sm w-full border">
                    เพิ่ม
                  </button>
                </div>
              </div>
            </template>

            <template x-if="modalOpen">
              <div
                class="fixed top-0 left-0 w-full h-full bg-black bg-opacity-50 flex items-center justify-center z-[20]"
                @click="modalOpen = false">
                <div class="bg-white p-6 rounded-xl w-52 h-52 transition-all transform"
                  x-transition:enter="transition-transform ease-out duration-300"
                  x-transition:enter-start="scale-95 opacity-0" x-transition:enter-end="scale-100 opacity-100"
                  x-transition:leave="transition-transform ease-in duration-300"
                  x-transition:leave-start="scale-100 opacity-100" x-transition:leave-end="scale-95 opacity-0">
                  <p class="text-center text-lg text-5xl">Modal Content</p>
                  <button class="w-full bg-red-500 text-white p-2 mt-2 rounded" @click="modalOpen = false">
                    Close
                  </button>
                  <button class="w-full bg-green-500 text-white p-2 mt-2 rounded" @click="sendOrder">
                    Confirm Order
                  </button>
                </div>
              </div>
            </template>
          </div>

          <% }); %>
            <% } else { %>
              <p class="text-gray-400">ไม่มีเมนูขายดีในขณะนี้</p>
              <% } %>
    </div>
