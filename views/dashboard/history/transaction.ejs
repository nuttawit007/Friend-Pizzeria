<section class="flex flex-col bg-gray-100 container mx-auto p-5 max-w-7xl mt-5">
    <!-- back button -->
    <a href="/dashboard">
        <button class="bg-_red-500 text-white px-5 py-3 rounded-lg inline-flex items-center justify-self-start">
        <i data-lucide="chevron-left"></i>
        กลับ</button>
    </a>

    <!-- table section -->
    <div class="flex flex-col w-full mt-4">
        <!-- title table -->
        <div class="flex justify-between items-center">
            <h1 class="text-xl text-center">ประวัติการสั่งซื้อ</h1>
            <input onchange="updateQueryString(this.value)" type="text" value="<%= filter %>" placeholder="ค้นหา"
                class="px-3 py-3 rounded-lg border border-gray-200" />
        </div>
        <div class="overflow-x-auto">
            <div class="mt-5 min-w-full inline-block align-middle">
                <div class="overflow-hidden">
                    <table class="min-w-full divide-y divide-gray-200 border-2 border-gray-200">
                        <thead>
                            <tr>
                                <th scope="col"
                                    class="px-6 py-3 text-start text-sm sm:text-md font-medium text-gray-500 ">
                                    หมายเลขออเดอร์</th>
                                <th scope="col"
                                    class="px-6 py-3 text-start text-sm sm:text-md font-medium text-gray-500 ">รายการ
                                </th>
                                <th scope="col"
                                    class="px-6 py-3 text-start text-sm sm:text-md font-medium text-gray-500 ">
                                    ราคา</th>
                                <th scope="col"
                                    class="px-6 py-3 text-start text-sm sm:text-md font-medium text-gray-500 ">
                                    จำนวนสินค้าที่สั่งซื้อ</th>
                                <th scope="col"
                                    class="px-6 py-3 text-start text-sm sm:text-md font-medium text-gray-500 ">
                                    สถานะ</th>
                                <th scope="col" class="px-6 py-3 text-end text-sm sm:text-md font-medium text-gray-500 uppercase">
                                    เพิ่มเติม</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for(item of transaction) { %>
                                <tr class="odd:bg-white even:bg-gray-100">
                                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-800">
                                        <%= item.id.toString().padStart(4, '0' ) %>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-800">
                                        <%= item.name %>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-800">
                                        <%= item.totalPrice %>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-800">
                                        <%= item.quantity %>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-800">
                                        <%= item.status %>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-end text-sm font-medium">
                                        <a href="">
                                            <button type="button"><i data-lucide="ellipsis-vertical"></i></button>
                                        </a>
                                        <button class="bg-gray-200 px-4 py-2 rounded-lg">เพิ่มเติม</button>
                                    </td>
                                </tr>
                                <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>